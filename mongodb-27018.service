[Unit]
Description=mongodb:27018
After=network.target

[Service]
User=vagrant
Group=vagrant
ExecStart=/usr/bin/mongod --quiet --config /data/mongodb-farm/mongodb-27018.conf
LimitFSIZE=infinity
LimitCPU=infinity
LimitAS=infinity
LimitNOFILE=64000
LimitNPROC=64000
TasksMax=infinity
TasksAccounting=false

[Install]
WantedBy=multi-user.target
